<Page x:Class="client.Pages.EditBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditBooks" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Edit Book" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Title: " VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="15" Margin="0,0,20,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txt_bookTitle" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Release year: " VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="15" Margin="0,0,20,0"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txt_bookReleaseYear" VerticalAlignment="Center"/>

            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" Grid.Column="0" x:Name="txt_authorSearch1" Height="20"/>
                <TextBox Grid.Row="0" Grid.Column="2" x:Name="txt_authorSearch2" Height="20"/>

                <ListBox Grid.Row="1" Grid.Column="0" x:Name="lst_authors1"/>
                <ListBox Grid.Row="1" Grid.Column="2" x:Name="lst_authors2"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10 0 10 0">
                    <Button Content="&gt;&gt;" x:Name="btn_moveRight" Click="btn_moveRight_Click" Margin="0 0 0 5" />
                    <Button Content="&lt;&lt;" x:Name="btn_moveLeft" Click="btn_moveLeft_Click"/>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Cancel" x:Name="btn_editCancel" Width="50" Margin="0,0,10,0"/>
                <Button Content="Save" x:Name="btn_editSave" Width="40" Margin="0,0,10,0"/>
                <Button Content="Delete" x:Name="btn_delete" Width="50"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
